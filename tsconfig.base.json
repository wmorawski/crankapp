{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "paths": {
      "@crank/ui": ["libs/ui/src/index.ts"]
    }
  }
}